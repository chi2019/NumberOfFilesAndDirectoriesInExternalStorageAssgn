<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chanakya.numberoffilesanddirectoriesinexternalstorage.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/resultDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/showFirst10FilesWithSizesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showFirst10FilesWithSizes"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/showAverageFilesizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showAverageFilesize"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/showFileFrequenciesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showFileFrequencies"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="16dp" />


</LinearLayout>
